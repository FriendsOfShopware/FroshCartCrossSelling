    'products': {
        'value': page.extensions.crossSelling
    },
    'boxLayout': {
        'value': boxLayout
    },
    'elMinWidth': {
        'value': '200px'
    },
    'navigation': {
        'value': true
    },
    'displayMode': {
        'value': 'small'
    },
    'verticalAlign': {
        'value': 'top'
    },
} %}
 {% sw_include "@Storefront/storefront/element/cms-element-product-slider.html.twig" with {
     sliderConfig: config,
     element: {
         'data': {
             'products': {
                 elements: page.extensions.crossSelling
             }
         },
         type: 'product-slider'
     }
 } %}
